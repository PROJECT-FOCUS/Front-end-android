<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="19.3dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/white_rect"
            android:clickable="false"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="19.2dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:orientation="vertical">

                <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/appName_op"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="AppName"
                    android:textColor="@color/txt_color"
                    android:textSize="17.3sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:orientation="horizontal">


                    <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/packageName_op"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:clickable="false"
                        android:text="package name"
                        android:textColor="#6e7f8d"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_op"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:clickable="false" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.3dp"
            android:layout_marginRight="19.3dp"
            android:background="@drawable/white_rect"
            android:orientation="vertical"
            android:padding="28.8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28.7dp"
                        android:text="Actual Usage"
                        android:textColor="@color/light_gray"
                        android:textSize="15.4sp" />


                    <com.team.focus.ui.customfonts.TextViewSFProDisplayBlack
                        android:id="@+id/exp_ussge_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#00000000"
                        android:hint="1:00"
                        android:inputType="text"
                        android:textColor="@color/txt_color"
                        android:textColorHint="@color/txt_color"
                        android:textSize="17.3sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#eff0f4" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28.7dp"
                        android:text="Expected Usage"
                        android:textColor="@color/blue"
                        android:textSize="15.4sp" />


                    <com.team.focus.ui.customfonts.TextViewSFProDisplayBlack
                        android:id="@+id/act_usage_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#00000000"
                        android:hint="2:00"
                        android:inputType="text"
                        android:textColor="@color/txt_color"
                        android:textColorHint="@color/txt_color"
                        android:textSize="17.3sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#eff0f4" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <com.team.focus.ui.customfonts.Button_SF_Pro_Display_Semibold
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="19.3dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/blue_rect"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textColor="#fbfbfb" />

        <com.team.focus.ui.customfonts.Button_SF_Pro_Display_Semibold
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.3dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="19.3dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/black_rect"
            android:text="Stop Monitoring"
            android:textAllCaps="false"
            android:textColor="#fbfbfb" />

    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/white_rect"
        android:layout_marginLeft="19.3dp"
        android:layout_marginRight="19.3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="9dp"
        android:padding="19.2dp">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="17.3sp"
                android:text="AppName"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="19dp"
                    android:layout_height="19dp" />


                <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/packageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="package name"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp"
                    android:textColor="#6e7f8d"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usage percentage"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:textSize="10sp"
                    android:textColor="#17b978"/>



                <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/actual_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/txt_color"
                    android:textSize="17.3sp"
                    android:text="hour:min"/>
            </LinearLayout>


            <com.team.focus.ui.customfonts.TextViewSFProDisplayRegular
                android:id="@+id/expected_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:gravity="right"
                android:text="hour:min"
                android:textSize="17.3sp"
                android:textColor="@color/light_gray"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>